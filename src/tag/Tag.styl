@require '../css/base'

.{$-cui-class-prefix}-tag
    display: inline-block
    padding: 8px 10px
    margin-right: 10px
    background: #f3f3f3
    font-size: 14px
    white-space: nowrap
    border: 1px solid #f3f3f3
    cursor: default

    &.clickable
        cursor: pointer

    &.checked
        background: $-cui-main-color
        border-color: $-cui-main-color
        color: #fff

    &-close
        margin-left: 5px
        opacity: .5
        font-size: 14px
        size: 14px
        cursor: pointer

        &:hover
            opacity: 1